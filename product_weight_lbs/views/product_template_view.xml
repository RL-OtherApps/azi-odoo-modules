<odoo>

    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">product.template.stock.property.form.lbs</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <label for="weight_in_lbs"
                       attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}"/>
                <div class="o_row" name="weight in lbs"
                     attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}">
                    <field name="weight_in_lbs"/>
                    <span>lbs</span>
                </div>
            </xpath>
            <xpath expr="//field[@name='weight']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
